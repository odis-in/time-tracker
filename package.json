{
  "name": "time-tracker",
  "version": "1.2.9",
  "description": "time-tracker app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "electron-builder",
    "prebuild": "find dist/ -type f -exec xattr -cr {} +",
    "postbuild": "xattr -cr dist/mac-arm64/Time\\ Tracker.app"
  },
  "repository": "https://github.com/odis-in/time-tracker",
  "publish": [
    {
      "provider": "github",
      "owner": "odis-in",
      "repo": "time-tracker",
      "releaseType": "release"
    }
  ],
  "author": "devcs",
  "license": "ISC",
  "build": {
    "appId": "com.odis.time-tracker",
    "asar": true,
    "productName": "Time Tracker",

    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        { "target": "zip", "arch": ["universal"] },
        { "target": "dmg", "arch": ["universal"] }
      ],
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "preAutoEntitlements": false,  
      "gatekeeperAssess": true,
      "icon": "./src/assets/img/timer-ticker-ico.icns",
      "artifactName": "Time Tracker-${version}-universal-mac.${ext}",
      "identity": "Elmer Padilla (Y2G286NQ96)",
      "extendInfo": { 
        "ElectronTeamID": "Y2G286NQ96",
        "NSCameraUsageDescription": "Time Tracker necesita usar la cámara.",
        "NSMicrophoneUsageDescription": "Time Tracker necesita usar el micrófono.",
        "NSAppleEventsUsageDescription": "Time Tracker requiere acceso a AppleScript para automatizar acciones."
      }
      
    },
    

    "mas": false,

    "afterPack": "./scripts/remove-xattrs.js",
    "afterSign": "./build/notarize.js",

    "linux": {
      "target": ["AppImage", "deb"]
    },
    "win": {
      "icon": "./src/assets/img/timer-ticker-ico.ico",
      "target": "NSIS"
    },
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "electron": "^34.3.0",
    "electron-builder": "^24.13.3",
    "request-promise": "*"
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "keytar": "^7.9.0",
    "node-cron": "^3.0.3",
    "node-notifier": "^10.0.1",
    "screenshot-desktop": "^1.15.1",
    "xmlrpc": "^1.3.2"
  }
}
