{
  "name": "time-tracker",
  "version": "1.0.0",
  "description": "time-tracker app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/carlosaid/electron-project",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "author": "devcs",
  "license": "ISC",
  "build": {
    "appId": "com.electron-project",
    "productName": "Time Tracker",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true
    },
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3",
    "request-promise": "*"
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "keytar": "^7.9.0",
    "node-cron": "^3.0.3",
    "node-notifier": "^10.0.1",
    "screenshot-desktop": "^1.15.1",
    "xmlrpc": "^1.3.2"
  }
}
